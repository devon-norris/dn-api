{
  "name": "api",
  "version": "1.0.0",
  "description": "",
  "main": "build/index.js",
  "scripts": {
    "dev": "nodemon --config",
    "start": "NODE_ENV=production node build",
    "build": "tsc",
    "smoke": "node smoke",
    "permissions:validate": "ts-node src/db/scripts/allEnvPermissionSync.ts && ts-node src/db/scripts/validatePermissions.ts",
    "permissions:print": "ts-node src/db/scripts/allEnvPermissionSync.ts",
    "deploy:staging": "git checkout master && git pull && git push staging master",
    "deploy:production": "git checkout master && git pull && git push production master",
    "restart:staging": "heroku restart --remote staging",
    "logs:staging": "heroku logs --tail --remote staging",
    "logs:production": "heroku logs --tail --remote production"
  },
  "author": "",
  "license": "ISC",
  "devDependencies": {
    "@types/bcrypt": "^3.0.0",
    "@types/cookie-parser": "^1.4.2",
    "@types/cors": "^2.8.6",
    "@types/express": "^4.17.3",
    "@types/jsonwebtoken": "^8.3.8",
    "@types/lodash": "^4.14.149",
    "@types/mongoose": "^5.7.6",
    "@types/morgan": "^1.9.0",
    "@types/yargs": "^15.0.4",
    "@typescript-eslint/eslint-plugin": "^2.23.0",
    "@typescript-eslint/parser": "^2.23.0",
    "axios": "^0.19.2",
    "cross-env": "^7.0.2",
    "dotenv": "^8.2.0",
    "eslint": "^6.8.0",
    "husky": "^4.2.3",
    "lint-staged": "^10.0.8",
    "nodemon": "^2.0.2",
    "prettier": "^2.0.1",
    "ts-node": "^8.6.2",
    "typescript": "^3.8.3",
    "yargs": "^15.3.1"
  },
  "dependencies": {
    "bcrypt": "^4.0.1",
    "cookie-parser": "^1.4.4",
    "cors": "^2.8.5",
    "express": "^4.17.1",
    "jsonwebtoken": "^8.5.1",
    "lodash": "^4.17.15",
    "mongoose": "^5.9.3",
    "morgan": "^1.9.1"
  },
  "lint-staged": {
    "*.{js,jsx,ts,tsx}": [
      "eslint --max-warnings 0 --ignore-pattern '!.eslintrc.js'",
      "prettier --write"
    ]
  },
  "husky": {
    "hooks": {
      "pre-commit": "npm run permissions:validate && lint-staged"
    }
  },
  "engines": {
    "node": "12.16.1",
    "npm": "6.13.4"
  }
}
